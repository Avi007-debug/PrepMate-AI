# GROQ / OpenAI Configuration
# Prefer `GROQ_API_KEY` if you are using Groq; `OPENAI_API_KEY` will still be supported as a fallback.
GROQ_API_KEY=your_groq_api_key_here

# (Optional) Fallback OpenAI key - if present, it will be used when GROQ_API_KEY is not set.
OPENAI_API_KEY=

# LLM Settings
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# Interview Configuration
MAX_QUESTIONS=10
QUESTION_DIFFICULTY=medium

# When true, the backend will use deterministic local mocks instead of calling external LLMs
MOCK_LLM=false

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000